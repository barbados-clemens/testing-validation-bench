{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "extends": ["monorepo:nrwl"],
      "groupName": "nx monorepo",
      "matchUpdateTypes": ["digest", "patch", "minor", "major"],
      "postUpgradeTasks": {
        "commands": [
          "npx nx migrate {{toVersion}}}",
          "npx nx migrate --run-migrations || 0"
        ]
      }
    }
  ]
}
