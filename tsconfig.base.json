{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tvb/ct-ng-lib": ["libs/ct-ng-lib/src/index.ts"],
      "@tvb/feat-large": ["libs/feat-large/src/index.ts"],
      "@tvb/feat-small": ["libs/feat-small/src/index.ts"],
      "@tvb/js-lib-one": ["libs/js-lib-one/src/index.ts"],
      "@tvb/large-lib": ["libs/large-lib/src/index.ts"],
      "@tvb/nest-lib-one": ["libs/nest-lib-one/src/index.ts"],
      "@tvb/next-lib-one": ["libs/next-lib-one/src/index.ts"],
      "@tvb/ng-lib-one": ["libs/ng-lib-one/src/index.ts"],
      "@tvb/node-lib-one": ["libs/node-lib-one/src/index.ts"],
      "@tvb/react-lib-one": ["libs/react-lib-one/src/index.ts"],
      "@tvb/util-medium": ["libs/util-medium/src/index.ts"],
      "@tvb/util-small": ["libs/util-small/src/index.ts"],
      "@tvb/ws-lib-one": ["libs/ws-lib-one/src/index.ts"],
      "tvb/workspace-plugin": ["tools/workspace-plugin/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
